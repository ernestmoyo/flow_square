# FlowSquare Environment Configuration
# Copy this file to .env and adjust values

# Application
APP_NAME=FlowSquare
APP_ENV=development
DEBUG=true
SECRET_KEY=change-me-to-a-secure-random-string
API_V1_PREFIX=/api/v1

# Database
POSTGRES_HOST=db
POSTGRES_PORT=5432
POSTGRES_USER=flowsquare
POSTGRES_PASSWORD=flowsquare_dev_password
POSTGRES_DB=flowsquare
DATABASE_URL=postgresql+asyncpg://${POSTGRES_USER}:${POSTGRES_PASSWORD}@${POSTGRES_HOST}:${POSTGRES_PORT}/${POSTGRES_DB}
DATABASE_URL_SYNC=postgresql://${POSTGRES_USER}:${POSTGRES_PASSWORD}@${POSTGRES_HOST}:${POSTGRES_PORT}/${POSTGRES_DB}

# Redis
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_URL=redis://${REDIS_HOST}:${REDIS_PORT}/0
CELERY_BROKER_URL=redis://${REDIS_HOST}:${REDIS_PORT}/1
CELERY_RESULT_BACKEND=redis://${REDIS_HOST}:${REDIS_PORT}/2

# JWT Auth
JWT_SECRET_KEY=change-me-jwt-secret
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# CORS
CORS_ORIGINS=["http://localhost:3000","http://localhost:5173"]

# Frontend
VITE_API_BASE_URL=http://localhost:8000
VITE_WS_BASE_URL=ws://localhost:8000

# Logging
LOG_LEVEL=DEBUG
LOG_FORMAT=json

# Demo
DEMO_ADMIN_EMAIL=admin@flowsquare.io
DEMO_ADMIN_PASSWORD=FlowSquare2025!
